<form class="mt-4" name="container-form" method="post" action="">
  <h3>Danh sách thành viên</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col" colspan="2">#</th>
          <th scope="col">Họ tên thành viên</th>
          <th scope="col">Tên thành viên</th>
          <th scope="col">Email</th>
          <th scope="col">Địa chỉ</th>
          <th scope="col">Lớp</th>
          <th scope="col">Khóa</th>
          <th scope="col">Chuyên ngành</th>
          <th scope="col">Chức vụ</th>
          <th scope="col">Vị trí</th>
          <th scope="col" colspan="2">Edit user</th>
        </tr>
      </thead>
      <tbody>
        {{#each user}}
          <tr>
            <td>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="{{this._id}}"
                  name="userId[]"
                />
              </div>
            </td>
            <th scope="row"></th>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.address}}</td>
            <td>{{this.class}}</td>
            <td>{{this.teach}}</td>
            <td>{{this.createdAt}}</td>
            <td>
              <a href="/user/edit/{{this._id}}" class="btn btn-link">Update</a>
            </td>
            <td>
              <a
                href=""
                data-id="{{this._id}}"
                data-toggle="modal"
                data-target="#deleteModal"
                class="btn btn-link"
              >Delete</a>
            </td>
          </tr>
        {{else}}
          <tr>
            <td colspan="5" class="text-center">Khong co nguoi dung
              <a href="/user/create">Đăng ky user</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

</form>


