<form class="mt-4" name="container-form" method="post" action="">
  <h3>Danh sách thành viên</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Họ</th>
          <th scope="col">Tên</th>
          <th scope="col">Email</th>
          <th scope="col">Lớp</th>
          <th scope="col">Khóa</th>
          <th scope="col">Chuyên ngành</th>
          <th scope="col">Ngày tạo</th>
          <th scope="col" colspan="2">Chi tiết</th>
        </tr>
      </thead>
      <tbody>
        {{#each user}}
          <tr>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.class}}</td>
            <td>{{this.course}}</td>
            <td>{{this.specialized}}</td>
            <td>{{this.createdAt}}</td>
            <td>
              <a href="/auth/admin/update/{{this._id}}" class="btn btn-link">Cập nhật</a>
            </td>
            <td>
              <a
                href=""
                data-id="{{this._id}}"
                data-toggle="modal"
                data-target="#deleteModal"
                class="btn btn-link"
              >Delete</a>
            </td>
          </tr>
        {{else}}
          <tr>
            <td colspan="5" class="text-center">Không có người dùng
              <a href="/user/create">Đăng ký thành viên</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

</form>

