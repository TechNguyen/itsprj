{{#with acc}}
<form class="row g-3" action="/auth/admin/user/{{_id}}" method="post" enctype="multipart/form-data">
  <div class="col-md-4">
    <label for="validationServer01" class="form-label">Họ</label>
    <input type="text" class="form-control " name="firstname" id="validationServer01" required>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Tên</label>
    <input type="text" class="form-control " id="validationServer02" name="lastname" required> 
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Tên đăng nhập</label>
    <input type="text" class="form-control " id="validationServer02" name="username" required>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Mã sinh viên</label>
    <input type="text" class="form-control " id="validationServer02" name="msv" required>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Số điện thoại</label>
    <input type="text" class="form-control " id="validationServer02" name="phonenumber" required>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Mật khẩu</label>
    <input type="password" class="form-control " id="validationServer02" name="password" required>
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Lớp</label>
    <input type="text" class="form-control " id="validationServer02" name="class" required>
    
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Địa chỉ</label>
    <input type="text" class="form-control " id="validationServer02" name="address" required>
    
  </div>
  <div class="col-md-4">
    <label for="validationServer02" class="form-label">Email</label>
    <input type="email" class="form-control " id="validationServer02" name="email" required>
    
  </div>
  <div class="col-md-4">
      <select class="form-select" aria-label="Default select example" name="course">
      <option selected>Chọn khóa</option>
      <option value="K14">K14</option>
      <option value="K15">K15</option>
      <option value="K16">K16</option>
      <option value="K17">K17 </option>
    </select>
  </div>
  <div class="col-md-4">
      <select class="form-select" aria-label="Default select example" name="specialized">
      <option selected>Chọn chuyên ngành</option>
      <option value="KHMT">Khoa học máy tính</option>
      <option value="CNTT">Công nghệ thông tin</option>
      <option value="KTPM">Kỹ thuật phần mềm</option>
      <option value="HTTT">Hệ thống thông tin</option>
      <option value="other">Ngành khác</option>
    </select>
  </div>
  <div class="col-md-4">
      <select class="form-select" aria-label="Default select example" name="position">
      <option selected>Chọn bộ phận</option>
      <option value="technical">Technical</option>
      <option value="tester">Tester</option>
      <option value="other">Bộ phận khác</option>
    </select>
  </div>
  <div class="col-md-4">
      <select class="form-select" aria-label="Default select example" name="permision">
      <option selected>Chọn chức vụ</option>
      <option value="admin">Quản trị viên</option>
      <option value="member">Thành viên</option>
      <option value="ctv">Cộng tác viên</option>
      <option value="other">Bộ phận khác</option>
    </select>
  </div>

  <div class="input-group col-md-12">
  <div class="mb-3">
    <label for="avatar" class="form-label">Image</label>
    <input class="form-control" type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
  </div>
</div>
  <div class="col-12">
    <button class="btn btn-primary" type="submit">Thêm thành viên</button>
  </div>
</form>
{{/with}}