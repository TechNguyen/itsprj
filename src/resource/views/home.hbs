<script>
    const d = new Date();
    const start = new Date('2014-08-29') 
    const curentSeconds = Math.floor((d.getTime() - start.getTime()) / 1000) 
    const curentYear = Math.floor(curentSeconds / 31536000); 
    const curentMonth = Math.floor((curentSeconds - curentYear * 31536000) / 2592000)
    const curentDay = Math.floor((curentSeconds - curentMonth * 2592000 - curentYear * 31536000) / 86400)
    const day = document.querySelector('.time_day') 
    const month = document.querySelector('.time_month') 
    const year = document.querySelector('.time_year')
    day.innerHTML = `<span>${curentDay}<p>Ngày</p></span>`;
    month.innerHTML = `<span>${curentMonth}<p>Tháng</p></span>`;
    year.innerHTML = `<span>${curentYear}<p>Năm</p></span>`;




