<div class="mt-4">
    <div class="row">
        {{#each courses}}
            <div class="col-lg-4 col-sm-6">
                <div class="card " style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/courses/{{this.slug}}" class="btn btn-primary">Hoc ngay</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div> 