<div class="mt-4">
    <div class="row">
        {{#each users}}
            <div class="col-lg-4 col-sm-6">
                <div class="card " style="width: 18rem">
                    <div class="card-body">
                        <p class="card-title">{{this.email}}</p>
                        <p class="card-text">{{this.address}}</p>
                        <p class="card-text">{{this.firstname}}</p>
                        <p class="card-text">{{this.lastname}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div> 