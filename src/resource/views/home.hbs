const prizeClick = Array.from(document.querySelectorAll('.prize__click'))
prizeClick.map((pr) => {
    pr.addEventListener('click', () => handleShow(pr))
})
function handleShow(item) {
    const contentItem = item.parentElement.querySelector('.prize--content')
    if(item.querySelector('i').className == 'fa-solid fa-arrow-down') {
        contentItem.style.animation = 'showprize 0.8s ease-in-out forwards'
        item.querySelector('i').className = ' fa-solid fa-arrow-up'
    } else {
        contentItem.style.animation = 'hidenprize 0.8s ease-in-out forwards'
        item.querySelector('i').className = 'fa-solid fa-arrow-down'
    }
}

