<div class="mt-4">
  <h3>Khóa học của tôi</h3>
  <a href="/user/storeUser">Khoa hoc cua toi</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col">Ho nguoi dung</th>
        <th scope="col">Ten nguoi dung</th>
        <th scope="col">Email </th>
        <th scope="col">Address </th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col" colspan="2">Edit user</th>
      </tr>
    </thead>
    <tbody>
      {{#each users }}
        <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.email}}</td>
        <td>{{this.address}}</td>
        <td>{{this.firstname}}</td>
        <td>{{this.lastname}}</td>
        <td>{{this.createAt}}</td>
        <td>
            <a href="/user/trash/{{this._id}}" data-id="{{this._id}}" class="btn btn-link btn-restore">Restore</a>
            <a href="/user/delete/{{this._id}}"  data-id="{{this._id}}"  data-toggle="modal" data-target="#deleteModal" class="btn btn-link">Delete</a>
        </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="5" class="text-center">Thùng rác trống
            <a href="/user/storeUser">Danh sách khóa học</a>
          </td>
        </tr>
        {{/each}}

        


    </tbody>
  </table>

</div>

<form method="post" name="deleteForm" id="deleteForm">

</form>
<form method="post" name="restoreForm" id="restoreForm">

</form>

<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="btn-delete-course" type="button" class="btn btn-primary" >Delete</button>
      </div>
    </div>
  </div>
</div>





<div id="restoreForm" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="btn-delete-course" type="button" class="btn btn-primary" >Delete</button>
      </div>
    </div>
  </div>
</div>
<script>



   document.addEventListener('DOMContentLoaded', function() {
    const deleteForm = document.forms['deleteForm'];
    const clickDelete = document.getElementById('btn-delete-course');
    var courseId;
    $('#deleteModal').on('show.bs.modal', function(e) {
       courseId = $(e.relatedTarget).data('id')
    })
    clickDelete.addEventListener('click', function() {
        deleteForm.action = '/courses/' + courseId + '/force?_method=DELETE';
        deleteForm.submit();
    })
    })


  document.addEventListener('DOMContentLoaded', function() {
    const restoreForm = document.forms['restoreForm'];
    const clickRestore = $('.btn-restore');
    clickRestore.click(function(e) {  
      e.preventDefault();
      var courseId = $(this).data('id')
      restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
      restoreForm.submit();
    })
    })
</script>
